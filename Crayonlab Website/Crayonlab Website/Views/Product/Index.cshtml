                <div class="category-image-container">
                    <img src="~/Content/assets/Pfront.png" alt="Category 1 Image 1" class="main-image1">
                    <img src="~/Content/assets/Pback.png" alt="Category 1 Image 2" class="zoomed-image1">
                </div>
            </div>

            <!-- Category 2 -->
            <div class="swiper-slide category" onclick="openModal()">
                <div class="category-label">SHIRT</div>
                <div class="category-image-container">
                    <img src="~/Content/assets/Sfront.png" alt="Category 2 Image 1" class="main-image1">
                    <img src="~/Content/assets/Sback.png" alt="Category 2 Image 2" class="zoomed-image1">
                </div>
            </div>

            <!-- Category 3 -->
            <div class="swiper-slide category" onclick="openModal()">
                <div class="category-label">LONG SLEEVE</div>
                <div class="category-image-container">
                    <img src="~/Content/assets/Lfront.png" alt="Category 3 Image 1" class="main-image1">
                    <img src="~/Content/assets/Lback.png" alt="Category 3 Image 2" class="zoomed-image1">
                </div>
            </div>

            <!-- Category 4 -->
            <div class="swiper-slide category" onclick="openModal()">
                <div class="category-label">JERSEY</div>
                <div class="category-image-container">
                    <img src="~/Content/assets/Jfront.png" alt="Category 4 Image 1" class="main-image1">
                    <img src="~/Content/assets/Jback.png" alt="Category 4 Image 2" class="zoomed-image1">
                    <img src="~/Content/assets/short.png" alt="Category 4 Image 3" class="third-images1">
                </div>
            </div>
        </div>
    </div>

    <div class="category-container" id="category-container-1">
        <!-- Swiper Container -->
        <div class="swiper1">
            <div class="swiper-wrapper1">
                <!-- Category 1 -->
                <div class="swiper-slide category" onclick="openModal()">
                    <div class="category-label">WARMER JACKET</div>
                    <div class="category-image-container">
                        <img src="~/Content/assets/Hfront.png" alt="Category 1 Image 1" class="main-image1">
                        <img src="~/Content/assets/Hback.png" alt="Category 1 Image 2" class="zoomed-image1">
                    </div>
                </div>

                <!-- Category 2 -->
                <div class="swiper-slide category" onclick="openModal()">
                    <div class="category-label">JERSEY</div>
                    <div class="category-image-container">
                        <img src="~/Content/assets/image7.png" alt="Category 2 Image 1" class="main-image1">
                        <img src="~/Content/assets/image8.png" alt="Category 2 Image 2" class="zoomed-image1">
                        <img src="~/Content/assets/image9.png" alt="Category 4 Image 3" class="third-image1">
                    </div>
                </div>

                <!-- Category 3 -->
                <div class="swiper-slide category" onclick="openModal()">
                    <div class="category-label">SHIRT NAME</div>
                    <div class="category-image-container">
                        <img src="~/Content/assets/image5.png" alt="Category 3 Image 1" class="main-image1">
                        <img src="~/Content/assets/image6.png" alt="Category 3 Image 2" class="zoomed-image1">
                    </div>
                </div>

                <!-- Category 4 -->
                <div class="swiper-slide category" onclick="openModal()">
                    <div class="category-label">SHIRT NAME</div>
                    <div class="category-image-container">
                        <img src="~/Content/assets/image7.png" alt="Category 4 Image 1" class="main-image1">
                        <img src="~/Content/assets/image8.png" alt="Category 4 Image 2" class="zoomed-image1">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div id="contactModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closeModal()">&times;</span>
            <h3>Contact Us</h3>
            <p>If you have any questions or would like to customize your shirt, feel free to reach out!</p>
            <p><strong>Company Name:</strong> Crayonlab</p>
            <p><strong>Email:</strong> crayonlab2023@gmail.com</p>
            <p><strong>Address:</strong> Mandaue, Looc, Cebu</p>
            <p><strong>Contact Number:</strong> 0908-629-0972</p>
        </div>
    </div>

    <script>
        // Modal functions
        function openModal() {
            document.getElementById("contactModal").style.display = "block";
        }

        function closeModal() {
            document.getElementById("contactModal").style.display = "none";
        }

        window.onclick = function (event) {
            if (event.target == document.getElementById("contactModal")) {
                closeModal();
            }
        }
    </script>
</main>
